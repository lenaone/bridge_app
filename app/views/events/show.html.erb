<div class="event-info">
  <h3 class="date"><%= @event.date.strftime('On %A, %e of %B %Y') %></h3>
  <h4 class="form-title"><%= @event.title %></h4>
  <%= image_tag(@event.image_url, style: "display: block; margin: 0 auto; width: 230px; height: 200px;") %>
  <p class="event-details">Speaker is <%= @event.speaker %></p>
  <p class="event-details"><%= @event.date.strftime('%I:%M%p') %> at <strong><%= @event.address %></strong></p>
</div>

<% if current_user && current_user.is_admin %>
  <div class="edit-delete-section"> 
    <%= link_to edit_event_url(@event), class: "btn btn-primary btn-md", id: "event-edit" do %>
       Edit
    <% end %> 
    <%= link_to @event, method: :delete, class: "btn btn-primary btn-md" do %>
      Delete
    <% end %>
  </div>
<% end %>