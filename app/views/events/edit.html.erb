<%= form_tag @event, :method => :put  do %>

  <%= label_tag 'Image Url:' %>
  <%= text_field_tag 'image_url', @event.image_url %>

  <%= label_tag 'Date:' %>
  <%= text_field_tag 'date', @event.date %>

  <%= label_tag 'Title:' %>
  <%= text_field_tag 'title', @event.title %>

  <%= label_tag 'Speaker:' %>
  <%= text_field_tag 'speaker', @event.speaker %>

  <%= label_tag 'Campus id:' %>
  <%= text_field_tag 'campus_id', @event.campus_id %>

  <%= label_tag 'Address:' %>
  <%= text_field_tag 'address', @event.address %>

  <%= button_tag "Edit" %> 
<% end %>


