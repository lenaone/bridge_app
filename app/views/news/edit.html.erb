<%= form_tag @news, :method => :put, class: "text-center border border-light p-5" do %>

<h3 class="bridge-news-title">EDIT NEWS</h3>

<div class="template">
  <div class="form-group">
    <%= label_tag 'Image Url' %>
    <%= text_field_tag 'image_url', @news.image_url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag 'Date' %>
    <%= text_field_tag 'date', @news.date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag 'Title' %>
    <%= text_field_tag 'title', @news.title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag 'Description' %>
    <%= text_field_tag 'description', @news.description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag 'Campus id' %>
    <%= text_field_tag 'campus_id', @news.campus_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= button_tag "Edit", class: "btn btn-primary btn-md", id: "button" %>
  </div>
</div>
<% end %>