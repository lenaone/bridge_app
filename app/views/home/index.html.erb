<section class="upcoming-event">
  <h2 class="title">UPCOMING EVENTS</h2>
  <div class="container">
  <% Event.all.each do |event|%>
    <div class="event-container">
      <h4 class="event-date"><%= event.date %></h4>
      <a href="/upcoming_events/<%=event.id%>"><%= image_tag(event.image_url, style: "display: block; margin: 0 auto; width: 230px; height: 200px;") %></a>
      <h3 class="event-title"><%= event.title %></h3>
    </div>
  <% end %>
  </div>
  <a href="/upcoming_events" class="btn btn-primary btn-md">EVENTS</a>
</section>
<section class="news">
  <h2 class="title">WELCOME TO THE BRIDGE CHURCH NEWS</h2>
  <div class="container">
    <% News.all.each do |news|%>
    <div class="event-container">
      <h4 class="event-date"><%= news.date %></h4>
      <a href="/news/<%=news.id%>"><%= image_tag(news.image_url, style: "display: block; margin: 0 auto; width: 230px; height: 200px; border-radius: 50%;") %></a>
      <h6 class="news-title"><%= news.title %></h6>
    </div>
  <% end %>
  </div>
  <a href="/news" class="btn btn-primary btn-md">OUR NEWS</a>
</section>
<section class="podcast">
  <div class="info">
    <h2 class="podcast-title">PODCAST</h2>
    <p>Check out the latest message here.</p>
    <div class="container">
      <% Podcast.all.each do |podcast|%>
      <div class="event-container">
        <h4 class="podcast-date"><%= podcast.date %></h4>
        <h6><a class="podcast-url" href="<%= podcast.url%>"><%= podcast.title %></a></h6>
      </div>
      <% end %>
    </div>
    <a href="/podcasts" class="btn btn-primary btn-md">LISTEN</a>
  </div>
</section>
<section class="offer">
  <div class="info">
    <h2 class="give">GIVE ONLINE</h2>
    <a href="/offer" class="btn btn-primary btn-md">GIVE NOW</a>
  </div>
</section>


