
<%= form_tag '/users/login', class: "text-center border border-light p-5" do %>

  <p class="sign-in">SIGN IN</p>

  <div class="loginform">
    <div class="form-group">
      <%= label_tag 'Email' %>
      <%= text_field_tag 'email', nil, placeholder: 'Email', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag 'Password' %>
      <%= password_field_tag 'password', nil, placeholder: 'password', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= button_tag 'Login', class: "btn btn-info btn-block my-4 waves-effect waves-light" %>
    </div>
  </div>

  <p class="small text-center text-gray-soft">Don't have an account yet? <a href="/users/sign_up">Sign up</a></p>

<% end %>
